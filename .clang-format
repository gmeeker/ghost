# Use the Google style in this project.
BasedOnStyle: Google
IndentAccessModifiers: false
AccessModifierOffset: -1

# Some folks prefer to write "int& foo" while others prefer "int &foo".  The
# Google Style Guide only asks for consistency within a project, we chose
# "int& foo" for this project:
DerivePointerAlignment: false
PointerAlignment: Left

# The Google Style Guide only asks for consistency w.r.t. "east const" vs.
# "const west" alignment of cv-qualifiers. In this project we use "const west".
QualifierAlignment: Left

# Only support since clang-format 14
SeparateDefinitionBlocks: Always

# Additional rules can be added if necessary
Language:        Cpp          # Set the language as C++ (this should also apply to CUDA)
TabWidth:        4            # Ensure tabs are 4 spaces wide
UseTab:          Never        # Use spaces instead of tabs
---
Language:        ObjC         # Set the language as ObjC (ObjC and ObjC++)
TabWidth:        4            # Ensure tabs are 4 spaces wide
UseTab:          Never        # Use spaces instead of tabs
---
Language:        Proto
TabWidth:        4            # Ensure tabs are 4 spaces wide
UseTab:          Never        # Use spaces instead of tabs
